FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including Poetry
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
ENV POETRY_VERSION=1.7.1
RUN pip install --no-cache-dir --upgrade pip setuptools \
 && pip install --no-cache-dir "poetry==$POETRY_VERSION"

RUN poetry config virtualenvs.create false

# Configure Poetry - disable virtual env creation as we're in a container
RUN poetry config virtualenvs.create false

# Copy dependency files
COPY pyproject.toml poetry.lock* ./

# Install dependencies for agent service only
RUN poetry install --no-interaction --no-ansi --only main --extras agent

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/notes

CMD ["python", "model_loop.py"]