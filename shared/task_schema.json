{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "user_prompt": { "type": "string" },
    "deadline": { "type": ["string", "null"], "format": "date-time" },
    "budget_minutes": { "type": "integer", "default": 60 },
    "status": {
      "type": "string",
      "enum": ["configuring", "pending", "active", "complete", "paused"]
    },
    "progress": { "type": "number" },
    "elapsed": { "type": "number" },
    "metrics": {
      "type": "object",
      "properties": {
        "searchCount": { "type": "integer" },
        "thinkCount": { "type": "integer" },
        "summaryCount": { "type": "integer" },
        "checkpointCount": { "type": "integer" }
      },
      "required": ["searchCount", "thinkCount", "summaryCount", "checkpointCount"]
    },
    "scratchpad": {
      "type": "array",
      "items": { "type": "string" }
    },
    "result": { "type": ["string", "null"] },
    "createdAt": { "type": "integer" },
    "updatedAt": { "type": "integer" }
  },
  "required": ["id", "name", "status", "budget_minutes"]
}
